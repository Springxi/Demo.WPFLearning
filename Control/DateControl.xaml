<Window x:Class="Demo.WPFLearning.Control.DateControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.WPFLearning.Control"
        mc:Ignorable="d"
        Title="DateControl" Height="300" Width="400">
    <Grid>
        <Calendar Name="Calendar" DisplayMode="Month" DisplayDateStart="2021-5-13" DisplayDateEnd="2021-6-5" Margin="5" 
                  FirstDayOfWeek="Sunday" SelectedDate="2021-5-18" SelectedDatesChanged="Calendar_SelectedDatesChanged"
                  SelectionMode="MultipleRange" >
            
        </Calendar>
        <Button Content="Button" HorizontalAlignment="Left" Margin="306,63,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <DatePicker VerticalAlignment="Bottom" Width="100" Name="DatePicker" DateValidationError="DatePicker_DateValidationError">
            
        </DatePicker>
    </Grid>
</Window>
