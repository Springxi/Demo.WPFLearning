<Window x:Class="Demo.WPFLearning.Control.ListControl_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.WPFLearning.Control"
        mc:Ignorable="d"
        Title="ListControl" Height="300" Width="300">
    <Grid>
        <ListBox Margin="5">
            <ListBoxItem>Green</ListBoxItem>
            <ListBoxItem>Yellow</ListBoxItem>
            <ListBoxItem>Red</ListBoxItem>
            <ListBoxItem>
                <Image Source="../Assets/Image/happy.png" Height="60" />
            </ListBoxItem>
            
            listBox自动隐式创建Item对象
             <!--listBox自动隐式创建Item对象-->
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Image Source="../Assets/Image/happy.png" Height="60" />
                <Label VerticalAlignment="Center">A happy face</Label>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"></StackPanel>
            <StackPanel Orientation="Horizontal"></StackPanel>

        </ListBox>
        
    </Grid>
</Window>
